@inherits LayoutComponentBase

<style>
    /* SOLUÇÃO DEFINITIVA - CSS INLINE PARA SOBRESCREVER TUDO */
    :root {
        --bs-body-bg: #f8dadb !important;
    }

    body {
        background-color: #f8dadb !important;
        --bs-body-bg: #f8dadb !important;
    }

    html, body, main, article, .page, .content {
        background-color: #f8dadb !important;
        margin: 0 !important;
        padding: 0 !important;
    }

    .content {
        padding-top: 0 !important;
    }
</style>

<div class="page">
    <!-- Sidebar -->
    <nav class="sidebar" aria-label="Menu de navegação principal">
        <NavMenu />
    </nav>

    <!-- Conteúdo principal -->
    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>